<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mariafortunato.calculadoraimc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_calculadora"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_calculadora_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CalculadoraIMC">
        <activity
            android:name=".InfosActivity"
            android:exported="false" />
        <activity
            android:name=".Teste"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>